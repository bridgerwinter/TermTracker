<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.ViewTerm">

	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="buttonEditTerm" Text="Edit" Clicked="buttonEditTerm_Clicked" />
		<ToolbarItem x:Name="buttonDeleteTerm" Text="Delete" Clicked="buttonDeleteTerm_Clicked_1" />
		<ToolbarItem x:Name="alertTermStart" Text="Alert Start" Clicked="alertTermStart_Clicked" />
		<ToolbarItem x:Name="alertTermEnd" Text="Alert End" Clicked="alertTermEnd_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<ListView x:Name="generalView"
					  ItemSelected="generalView_ItemSelected">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding courseTitle}" TextColor="White"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
